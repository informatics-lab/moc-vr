[[##remotejs:
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/aframe/0.5.0/aframe.min.js"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
#]]

[[##content:
<div class = "posts">
    <h1 class="content-subhead">Photosphere Observation</h1>
    <div class="post">
        <p class="post-meta">
            <a href="/edit/[[= model.id]]">edit</a>
            Observed [[= model.dateTime]] tagged as:
            [[~ model.tags :value:index]]
            <a class="post-category" href="/tag/[[= value]]">[[= value]]</a>
            [[~]]
        </p>
        <br />
        <script type="text/javascript" src="/js/hud/windbarb.js"></script>
        <script type="text/javascript" src="/js/hud/hud.js"></script>

        <a-scene embedded>
            <a-camera reverse-mouse-drag="true" >
                <a-entity hud="width:0.8; height:0.6; background:#FFF; visibility:[[= model.visibility]]; temperature:[[= model.temperature]]; dewPoint:[[= model.dewPoint]]; windDirection:[[= model.windDirection]]; windSpeed:[[= model.windSpeed]];"
                                      position="0.1 0.05 -0.65"
                                      visible="false">
                </a-entity>
            </a-camera>
            <a-assets>
                <img id="img_[[= model.id]]" crossorigin="use-credentials" src="[[= model.photosphere]]">
            </a-assets>
            <a-sky src="#img_[[= model.id]]"></a-sky>
        </a-scene>

    </div>
</div>
#]]

